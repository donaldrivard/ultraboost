<aura:component>

<div>
<fieldset class="slds-form-element">
  <legend class="slds-form-element__legend slds-form-element__label">Platform Fee</legend>
  <div class="slds-form-element__control">
    <span class="slds-radio">
      <input type="radio" id="radio-25" data-value="$10,000" name="fee" onclick="{!c.platformSelect}" checked="" />
      <label class="slds-radio__label" for="radio-25">
        <span class="slds-radio--faux"></span>
        <span class="slds-form-element__label">Digital Small Business Edition - $10,000</span>
      </label>
    </span>
    <span class="slds-radio">
      <input type="radio" id="radio-26" data-value="$20,000" name="fee" onclick="{!c.platformSelect}" />
      <label class="slds-radio__label" for="radio-26">
        <span class="slds-radio--faux"></span>
         <span class="slds-form-element__label">Digital Corporate Edition - $20,000</span>
      </label>
    </span>
    
    <span class="slds-radio">
      <input type="radio" id="radio-27" data-value="$40,000" onclick="{!c.platformSelect}"  name="fee"  />
      <label class="slds-radio__label" for="radio-27">
        <span class="slds-radio--faux"></span>
         <span class="slds-form-element__label">Digital Enterprise Edition - $40,000</span>
      </label>
    </span>
  </div>
</fieldset>    
<div class="slds-form-element">
  <label class="slds-form-element__label" for="text-input-PlatformFee">Platform Fee</label>
  <div class="slds-form-element__control">
    <input type="text" id="text-input-fee" value="" class="slds-input" placeholder=" $0.00" />
  </div>
</div>

</div>

</aura:component>	
